{
    "compilerOptions": {
        "composite": true,
        "incremental": true,
        "declaration": true,
        "target": "es2018",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "../dist",
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "baseUrl": ".",
        "lib": ["ES2016", "DOM"],
        "paths": {
            "lib/*": ["lib/*"]
        }
    },

    "include": ["**/*.ts"]
}
